generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Route {
  id        String @id @default(uuid())
  routeName String
  buses     Bus[]
  stops     Stop[]
}

model Bus {
  id        String @id @default(uuid())
  route     Route  @relation(fields: [routeId], references: [id])
  routeId   String
  busNumber String
  capacity  String
  status    String
}

model Stop {
  id        String @id @default(uuid())
  route     Route  @relation(fields: [routeId], references: [id])
  routeId   String
  stopName  String
  latitude  String
  longitude String
}

model RouteChannel {
  id        String @id @default(uuid())
  channelId String
}

model BusChannel {
  id        String @id @default(uuid())
  channelId String
}

model BusLocationChannel {
  id        String @id @default(uuid())
  channelId String
}
